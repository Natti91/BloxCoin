            <h1>Win 40K Robux</h1>
        </div>

        <h1>BloxCoin</h1>
        <p>Balance: <span id="balance">100</span> coins</p>
        
        <label for="betAmount">Enter Bet Amount:</label>
        <input type="number" id="betAmount" min="1" placeholder="Enter your bet"><br><br>
        
        <button onclick="flipCoin('heads')">Choose Heads</button>
        <button onclick="flipCoin('tails')">Choose Tails</button>
        
        <div id="result"></div>

        <h2>Manage Balance</h2>
        <button onclick="redirectToPayPal()">Deposit Coins</button>
    </div>

    <!-- Login Section -->
    <div class="login-container">
        <button class="login-btn" onclick="login()">Login</button>
        <button class="login-btn" onclick="signUp()">Sign Up</button>
        <div id="user-info" style="display:none;"></div>
    </div>

    <script>
        let balance = 100; // Initial balance
        let loggedIn = false;
        let username = '';

        // Function to update balance display
        function updateBalanceDisplay() {
            document.getElementById('balance').textContent = balance;
        }

        // Function to handle coin flip
        function flipCoin(playerChoice) {
            const betAmount = parseInt(document.getElementById('betAmount').value);
            if (!betAmount || betAmount <= 0) {
                document.getElementById('result').textContent = "Please enter a valid bet amount!";
                return;
            }
            if (betAmount > balance) {
                document.getElementById('result').textContent = "You don't have enough coins to bet that amount!";
                return;
            }
            const outcome = playerChoice === 'heads' ? 'tails' : 'heads';
            balance -= betAmount; // Deduct the bet amount
            document.getElementById('result').textContent = `The coin landed on ${outcome}. You lose ${betAmount} coins!`;
            updateBalanceDisplay();
        }

        // Function to redirect to PayPal for deposit
        function redirectToPayPal() {
            const depositAmount = 50;
            const paypalURL = `https://www.paypal.com/paypalme/viper9154?locale.x=no_NO?cmd=_xclick&business=YOUR_PAYPAL_EMAIL&amount=${depositAmount}&currency_code=USD&item_name=Coin+Flip+Game+Deposit&return=https://yourwebsite.com/success&cancel_return=https://yourwebsite.com/cancel`;
            window.location.href = paypalURL;
        }

        // Simulate login functionality
        function login() {
            const enteredUsername = prompt('Enter your Roblox Username:');
            if (enteredUsername) {
                loggedIn = true;
                username = enteredUsername;
                localStorage.setItem('username', username);
                localStorage.setItem('balance', balance);
                document.getElementById('user-info').style.display = 'block';
                document.getElementById('user-info').textContent = `Logged in as: ${username}`;
                updateBalanceDisplay();
            }
        }

        // Simulate sign up functionality
        function signUp() {
            const newUsername = prompt('Enter a new username:');
            if (newUsername) {
                loggedIn = true;
                username = newUsername;
                balance = 100; // Set initial balance for new user
                localStorage.setItem('username', username);
                localStorage.setItem('balance', balance);
                document.getElementById('user-info').style.display = 'block';
                document.getElementById('user-info').textContent = `Signed up as: ${username}`;
                updateBalanceDisplay();
            }
        }

        // Load user data if available
        window.onload = function() {
            const savedUsername = localStorage.getItem('username');
            const savedBalance = localStorage.getItem('balance');
            if (savedUsername && savedBalance) {
                username = savedUsername;
                balance = parseInt(savedBalance);
                loggedIn = true;
                document.getElementById('user-info').style.display = 'block';
                document.getElementById('user-info').textContent = `Logged in as: ${username}`;
                updateBalanceDisplay();
            }
        };
    </script>
